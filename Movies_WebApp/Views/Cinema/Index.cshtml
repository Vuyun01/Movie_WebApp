@*define model to get data*@
@model IEnumerable<Cinema>


@{
    ViewData["Title"] = "List of Cinemas";
}
<div class="row">
    <div class="col">
        <table class="table table-light">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.Logo)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.Logo" alt="@item.Name" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(model => item.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(model => item.Description)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-success"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a class="btn btn-success"><i class="bi bi-eye"></i>Details</a>
                            <a class="btn btn-danger"><i class="bi bi-trash"></i>Delete</a>

                        </td>

                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>


