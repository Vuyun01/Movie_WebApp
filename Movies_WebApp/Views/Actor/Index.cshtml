
@*define model to get data*@
@model IEnumerable<Actor> 
@{
    ViewData["Title"] = "List of Actors";
}
    <div class="row">
        <div class="col" >
            <table class="table table-light">
                <thead>
                    <tr class="text-center">
                        <th>@Html.DisplayNameFor(model => model.ProfileImageURL)</th>
                        <th>@Html.DisplayNameFor(model => model.FullName)</th>
                        <th>@Html.DisplayNameFor(model => model.Bio)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="text-center">
                            <td class="align-middle">
                                <img class="rounded-circle" src="@item.ProfileImageURL" alt="@item.FullName" style="max-width: 150px"/>
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(model => item.FullName)
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(model => item.Bio)
                            </td>
                            <td class="align-middle">
                                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.ActorID"><i class="bi bi-pencil-square"></i>Edit</a>
                                <a class="btn btn-success" asp-action="Details" asp-route-id="@item.ActorID"><i class="bi bi-eye"></i>Details</a>
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ActorID"><i class="bi bi-trash"></i>Delete</a>

                            </td>

                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>

    <div style="position: fixed; right: 25px; bottom: 25px; z-index: 3" class="text-white">
        <a asp-controller="Actor" asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New
        </a>
    </div>


